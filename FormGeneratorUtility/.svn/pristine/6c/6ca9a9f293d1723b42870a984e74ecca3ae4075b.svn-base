	public  boolean compileJavaFile(String fileUrl) {
		System.out.println("Java File uri " + fileUrl);
		DiagnosticCollector<JavaFileObject> diagnostics = new DiagnosticCollector<JavaFileObject>();
		JavaCompiler compiler = ToolProvider.getSystemJavaCompiler();
		StandardJavaFileManager fileManager = compiler.getStandardFileManager(diagnostics, null, null);
		File javaFileUri = new File(fileUrl);
		try {
			

			List<String> optionList = new ArrayList<String>();
			// set compiler's classpath to be same as the runtime's
			optionList.addAll(Arrays.asList("-classpath", System.getProperty("java.class.path")
					+ ";D:\\java\\DynamicFormCreation_WorkSpace\\FormGeneratorUtility\\WebContent\\WEB-INF\\lib\\javax.persistence.jar;"
					+ "D:\\java\\DynamicFormCreation_WorkSpace\\FormGeneratorUtility\\WebContent\\WEB-INF\\lib\\lombok.jar;"
					+ "D:\\java\\DynamicFormCreation_WorkSpace\\FormGeneratorUtility\\WebContent\\WEB-INF\\lib\\hibernate-validator.jar"));
			Iterable<? extends JavaFileObject> compilationUnit = fileManager
					.getJavaFileObjectsFromFiles(Arrays.asList(javaFileUri));

			JavaCompiler.CompilationTask task = compiler.getTask(null, fileManager, diagnostics, optionList, null,
					compilationUnit);

			boolean result =  task.call();
			if(result){
				return true;
			}else{
				System.out.println("Compilation error");
			}
		} catch (Exception e) {
			// TODO: handle exception
			e.printStackTrace();
			return false;
		}finally {
			try {
				fileManager.close();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		return false;
	}

