		newTextBoxDiv.appendTo("#table_fields");
		counter++;
    });
    
    $("#delFields").click(function () {
    	var count = $('[id^=tbl_tr]').length;
    	if(count == 1)
    	{
    		alert("You Can Not Delete Parent Row!");
			return false;
    	}
    	else
    	{
    		counter--;
    		$("#tbl_tr"+counter).remove();
    	}
    });
    
    
});
</script>

